<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignActivity">

    <Button
        android:id="@+id/buttom_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0F000000"
        android:text="知乎日报"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:backgroundTint="@null" />

    <LinearLayout
        android:id="@+id/linear_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttom_1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bottom_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_back_register"
            android:text="注册"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#3F51B5"
            android:textSize="25dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/image_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_back"
        android:layout_centerVertical="true"
        android:src="@drawable/splash_logo">
    </ImageView>

    <LinearLayout
        android:id="@+id/linear_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_splash"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/boder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_lgion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_user" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:hint="请输入账号"
            android:inputType="text"
            android:lines="1"
            android:maxLength="10"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_thr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_sec"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/boder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="10"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_thr"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/boder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/edit_password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="10"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/bottom_lgion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_password"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="#2196F3"
        android:text="注册"
        app:backgroundTint="@null" />


</RelativeLayout>